<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_small"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sharedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/spacing_middle_x"
                    android:paddingLeft="@dimen/spacing_middle_x"
                    android:paddingTop="@dimen/spacing_middle_x"
                    android:paddingRight="@dimen/spacing_middle_x"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtShared"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_hard"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_middle_x"
                    android:layout_marginRight="@dimen/spacing_middle_x"
                    android:background="@color/grey_soft" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_middle"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingTop="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Person name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/material_grey_800"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/verifiedIcon"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_verified"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23 hrs"
                            android:textColor="@color/grey_hard"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/audience"
                            android:layout_marginLeft="5dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_public_small"/>

                    </LinearLayout>
                </LinearLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    style="@style/RippleStyleBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btnMore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:clickable="true"
                        android:padding="5dp"
                        android:src="@drawable/ic_more"/>

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:paddingLeft="@dimen/spacing_middle"
                    android:paddingRight="@dimen/spacing_middle"
                    android:autoLink="email|web"
                    android:linksClickable="true"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/photo_content"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="250dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:background="#eeeeee"
                        android:transitionName="photo"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_margin="@dimen/spacing_large"
                        android:layout_gravity="center"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/likesLayout"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_heart_red"/>

                <TextView
                    android:id="@+id/txtTotalLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Likes"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/grey_soft" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/grey_soft">

                <LinearLayout
                    android:id="@+id/btnLike"
                    android:layout_weight="1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    style="@style/RippleStyleBlack"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/viewLike"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_like"/>

                    <TextView
                        android:id="@+id/txtLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:textSize="20sp"
                        android:textColor="#757475"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnComment"
                    android:layout_weight="1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:clickable="true"
                    style="@style/RippleStyleBlack"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_comment" />


                    <TextView
                        android:id="@+id/txtComments"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:textSize="20sp"
                        android:textColor="#757475"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btnShare"
                    android:layout_weight="1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:clickable="true"
                    style="@style/RippleStyleBlack"
                    android:background="?attr/selectableItemBackground" >

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_share"/>


                    <TextView
                        android:id="@+id/txtShares"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:textSize="20sp"
                        android:textColor="#757475"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
